{
  "name": "lunr/gravity",
  "description": "Lunr.Gravity is a database library that doesn't limit functionality to the least common denominator.",
  "keywords": [ "database", "SQL", "MySQL", "MariaDB", "SQLite" ],
  "homepage": "https://github.com/lunr-php/lunr.gravity",
  "type": "library",
  "license": "MIT",
  "require": {
    "psr/log": ">=1.1",
    "php": ">=8.1",
    "lunr/ticks": "~0.12.0"
  },
  "suggest": {
    "ext-mysqli": "Needed for MySQL/MariaDB support in Gravity",
    "ext-sqlite": "Needed for SQLite support in Gravity"
  },
  "require-dev": {
    "lunr/config": "~0.12.0",
    "lunr/halo": "~0.11.0",
    "mockery/mockery": "~1.6",
    "phpunit/phpunit": ">=9.0 <9.6",
    "ext-xdebug": "~3.1"
  },
  "config": {
    "audit": {
      "ignore": [
        "PKSA-z3gr-8qht-p93v"
      ]
    },
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\": "src/Lunr/"}
  }
}
